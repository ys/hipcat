{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
    "node": true
  },
  "plugins": [
    "import",
    "react"
  ],
  "rules": {
    "arrow-parens": 0,  // TODO: enable after fix up
    "arrow-spacing": 1,
    "callback-return": 1,
    "comma-dangle": [0, "always-multiline"], // TODO: enable after discussion to be link golang
    "consistent-return": 1,
    "constructor-super": 2,
    "eol-last": 1,
    "import/default": 0, // disabled, as it seems to have false positives
    "import/imports-first": 1,
    "import/export": 1,
    "import/named": 1,
    "import/namespace": 1,
    "import/no-duplicates": 1,
    "import/no-named-as-default": 1,
    "import/no-require": 1,
    "import/no-unresolved": 2,
    "jsx-quotes": 0,  // TODO: enable after discussion
    "new-cap": 1,
    "no-underscore-dangle": 0,
    "no-use-before-define": 2,
    "no-undef": 2,
    "no-var": 1,
    "no-class-assign": 2,
    "no-extra-semi": 1,
    "no-this-before-super": 2,
    "no-unreachable": 1,
    "no-unexpected-multiline": 2,
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "prefer-spread": 1,
    "prefer-template": 0, // TODO: enable after replacing string concat
    "quotes": [0, "single"],
    "react/no-danger": 2,
    "react/no-unknown-property": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/prefer-es6-class": 1,
    "react/prop-types": 0, // TODO: enable after adding everywhere
    "react/react-in-jsx-scope": 1,
    "semi": [1, "never"],
    "strict": 0
  }
}
